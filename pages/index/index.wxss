  overflow: hidden;
  /* background-image: linear-gradient(0deg, rgba(0, 0, 0, .8) 0%, rgba(0, 0, 0, .3) 50%, rgba(0, 0, 0, .1) 100%); */
}

.displayGroup {
  border-radius: 10rpx;
  height: 256px;
  width: 100%;
  position: relative;
  overflow: hidden;
}

.dmGroup {
  position: absolute;
  /* top: 140rpx; */
  left: 100%;
  z-index: 10;
  animation-timing-function: linear;
  animation-fill-mode: none;
  transform: translateZ(0);
  white-space: nowrap;
  height: 450rpx;
}

.dmGroup.top {
  height: 150rpx;
}

.dmGroup.mid {
  height: 150rpx;
  top: 150rpx;
}

.dmGroup.btm {
  height: 150rpx;
  top: 300rpx;
}

.dmItem {
  display: inline-flex;
  margin-right: 60rpx;
  white-space: nowrap;
}

.dmItem .dm {
  display: inline-flex;
  vertical-align: middle;
  align-items: center;
  position: relative;
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 15rpx 0 5rpx;
  background: rgba(0, 0, 0, .5);
  border-radius: 40rpx;
  overflow: hidden;
  font-size: 40rpx;
  color: #fff;
}

.dmItem .avatarBox {
  display: inline-block;
  position: relative;
  width: 80rpx;
  height: 80rpx;
  margin-right: 10rpx;
  color: #fff;
}

.dmItem .avatarBox .avatar {
  width: 80rpx;
  height: 80rpx;
  border: 0;
  overflow: hidden;
}

.dmItem .dm .sex {
  position: absolute;
  left: 25rpx;
  top: 18rpx;
  width: 22rpx;
  height: 22rpx;
  overflow: hidden;
}

.dmItem .dm .content {
  display: inline-block;
  height: 80rpx;
  line-height: 80rpx;
  margin-right: 10rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

@keyframes dmAnimation2 {
  0% {
    transform: translateX(0);
  }

  100% {
    transform: translateX(-130%);
  }
}

@keyframes dmAnimation {
  from {
    left: 100%;
  }

  to {
    left: -100%;
  }
}

.normal {
  z-index: 3;
  height: 256px;
  width: 100%;
  top: 0;
  position: fixed;
}

.is_checked {
  opacity: 0;
}

@keyframes first {
  from {
    left: 100%;
  }

  to {
    left: -100%;
  }
}

.music {
  display: inline-block;
  width: 60rpx;
  height: 60rpx;
  position: fixed;
  top: 40rpx;
  right: 40rpx;
  z-index: 9999;
}


/* css动画，控制图标一直旋转 */

@keyframes rotate {
  from {
    transform: rotate(0)
  }

  to {
    transform: rotate(360deg)
  }
}

