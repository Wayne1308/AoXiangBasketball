}

.launchGird {
  padding: 20rpx;
  position: relative;
  height: 100%;
}

.focus {
  position: absolute;
  left: 0;
  top: 0;
  z-index: 2;
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
  overflow: hidden;
}

.shadowOverlay {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 5;
  width: 100%;
