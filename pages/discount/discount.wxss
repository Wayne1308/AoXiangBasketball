/* pages/discount/discount.wxss */
.discount_container,
discount_bg {
  height: 100vh;
  width: 100%;
  background-color: #D70910;
}

.image {
  width: 225px;
  height: 333px;
  margin: 10rpx 20rpx 0rpx 0rpx;
}

.class_main {
  height: 186.5px;
  width: 100%;
  display: flex;
  justify-content: space-around;
  align-items: center;
  background-color: #D70910;
  border-bottom: 4px solid #ffffff;
}

.class_main .class_img {
  height: 158px;
  width: 117px;
}

.class_text {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 186.5px;
  width: 150px;
  font-size: 16px;
  color: #ffffff;
}

.text_title {
  margin-top: 32px;
  margin-bottom: 11px;
}

.buy_btn {
  margin-top: 22px;
  font-size: 16px;
}

.buy_btn3 {
  margin-top: 10px;
  font-size: 16px;
}



.modal {
  position: fixed;
  height: 100%;
  width: 100%;
  left: 0;
  bottom: 0;
  right: 0;
  z-index: 1000;
}

.modal-cancel {
  position: absolute;
  z-index: 2000;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.3);
}

.bottom-dialog-body {
  width: 100%;
  position: absolute;
  z-index: 3000;
  bottom: 0;
  left: 0;
}

/*动画前初始位置*/
.bottom-positon {
  -webkit-transform: translateY(100%);
  transform: translateY(100%);
}


/* 底部弹出框 */
.dialog_container {
  height: 900rpx;
  width: 100%;
  background-color: #FF2313;
  border-top-left-radius: 40rpx;
  border-top-right-radius: 40rpx;
}

.dialog_1 {
  width: 100%;
  height: 40%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.dialog_1 text {
  color: #ffffff;
  font-size: 40rpx;
}

.dialog_2 {
  width: 100%;
  height: 60%;
  background-color: #ffffff;
  position: relative;
}

.dialog_2 .tip {
  color: #D70910;
  position: absolute;
  top: 36rpx;
  left: 72rpx;
}

.dialog_2 button {
  position: absolute;
  margin-top: 20px;
}

.tip_container {
  display: flex;
}

/* 用户数据 */
.form {
  position: absolute;
  top: 76px;
  left: 126.5px;
  right: 126.5px;
}

